{% extends 'base.html.twig' %}

{% block title %}Music{% endblock %}

{% block body %}
    <h1>Music</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ music.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ music.name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ music.duration }}</td>
            </tr>
            <tr>
                <th>Album</th>
                <td><a href="{{ path('app_album_show', {id : music.album.id} ) }}">{{ music.album }}</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_music_index') }}">back to list</a>

    <a href="{{ path('app_music_edit', {'id': music.id}) }}">edit</a>

    {{ include('music/_delete_form.html.twig') }}
